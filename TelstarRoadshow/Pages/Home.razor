@page "/"

<!-- Hero Section -->
<section class="bg-gradient-to-r from-indigo-500 via-purple-500 to-pink-500 py-20 text-white">
    <div class="mx-auto max-w-5xl px-4 text-center">
        <h1 class="mb-6 border-0 text-4xl font-extrabold outline-none ring-0 focus:outline-none focus:ring-0 md:text-6xl">
            Welcome to Tailwind in Blazor
        </h1>

        <p class="mb-8 text-lg md:text-xl">You’ve successfully integrated Tailwind CSS with your Blazor project! 🎉</p>
        <a href="/" class="inline-block rounded-lg bg-white px-6 py-3 font-semibold text-purple-700 shadow transition hover:bg-purple-100">
            Go Back Home
        </a>
    </div>
</section>

<!-- Cards Section -->
<section class="bg-gray-100 py-16">
    <div class="mx-auto max-w-6xl px-4">
        <h2 class="mb-12 text-center text-3xl font-bold text-gray-800">Tailwind Components</h2>
        <div class="grid gap-8 md:grid-cols-3">
            @foreach (var item in DemoCards)
            {
                <div class="rounded-lg bg-white p-6 shadow-md transition hover:shadow-xl">
                    <h3 class="mb-2 text-xl font-semibold text-gray-800">@item.Title</h3>
                    <p class="text-gray-600">@item.Description</p>
                    <button class="mt-4 inline-block font-semibold text-blue-600 hover:underline">
                        Learn More →
                    </button>
                </div>
            }
        </div>
    </div>
</section>

@code {
    private List<DemoCard> DemoCards = new()
    {
        new DemoCard { Title = "Utility Classes", Description = "Use classes like p-4, mt-2, text-center to quickly style elements." },
        new DemoCard { Title = "Responsive Design", Description = "Tailwind makes it easy to build mobile-first responsive layouts." },
        new DemoCard { Title = "Custom Themes", Description = "Extend the Tailwind config to add your own colors, fonts, and spacing." }
    };

    private class DemoCard
    {
        public string Title { get; set; }
        public string Description { get; set; }
    }
}